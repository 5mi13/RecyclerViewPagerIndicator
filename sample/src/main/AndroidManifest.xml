<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.viewpagerindicator.as.sample" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >

        <!-- http://stackoverflow.com/questions/26515058/this-activity-already-has-an-action-bar-supplied-by-the-window-decor -->
        <activity
            android:name=".ListSamples"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>




        <!-- CIRCLE INDICATOR -->

        <activity
            android:name=".SampleCirclesDefaultRecycler"
            android:label="Circles/DefaultRecycler">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="com.jakewharton.android.viewpagerindicator.sample.SAMPLE" />
            </intent-filter>
        </activity>


        <activity
            android:name=".SampleCirclesInitialPageRecycler"
            android:label="Circles/InitialPageRecycler">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="com.jakewharton.android.viewpagerindicator.sample.SAMPLE" />
            </intent-filter>
        </activity>



        <!-- ICON INDICATOR -->

        <activity
            android:name=".SampleIconsDefaultRecycler"
            android:label="Icons/DefaultRecycler">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="com.jakewharton.android.viewpagerindicator.sample.SAMPLE" />
            </intent-filter>
        </activity>


        <!-- LINE INDICATOR -->

        <activity
            android:name=".SampleLinesDefaultRecycler"
            android:label="Lines/DefaultRecycler">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="com.jakewharton.android.viewpagerindicator.sample.SAMPLE" />
            </intent-filter>
        </activity>


        <!-- TITLE INDICATOR -->

        <activity
            android:name=".SampleTitlesDefaultRecycler"
            android:label="Titles/DefaultRecycler">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="com.jakewharton.android.viewpagerindicator.sample.SAMPLE" />
            </intent-filter>
        </activity>



        <!-- TAB INDICATOR -->
        <activity
            android:name=".SampleTabsDefaultRecycler"
            android:label="Tabs/DefaultRecycler"
            android:theme="@style/Theme.PageIndicatorDefaults">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="com.jakewharton.android.viewpagerindicator.sample.SAMPLE" />
            </intent-filter>
        </activity>


        <!-- UNDERLINE INDICATOR -->

        <activity
            android:name=".SampleUnderlinesDefaultRecycler"
            android:label="Underlines/DefaultRecycler"
            android:theme="@style/StyledIndicators">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="com.jakewharton.android.viewpagerindicator.sample.SAMPLE" />
            </intent-filter>
        </activity>

    </application>

</manifest>
